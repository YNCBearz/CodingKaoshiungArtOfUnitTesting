pipeline {
    agent { docker { image 'php' } }
    stages {
        stage('Composer Install') {
            steps {
                echo 'Installing Composer'
                sh 'curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/bin --filename=composer'
            }

            steps {
                echo 'Installing Vendor'
                sh 'composer install'
            }
        }

        stage('PHPUnit') {
            steps {
                sh './vendor/bin/phpunit'
            }
        }
    }
}